{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": [
            "ES2020",
            "DOM"
        ]
    },
    "include": [
        "ts/src/*/*.ts"
    ],
    "exclude": [
        "ts/tests/*/*.spec.ts"
    ]
}